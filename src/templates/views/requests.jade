extends ../layouts/default.jade

block content
    div.container
        div.row
            div.col.s12
                h1 Pending Requests
        if(synbiohubs.length == 0)
            div.row
                div.col.s12
                    h5 No requests to process! âœ…
        else
            div.row
                for synbiohub in synbiohubs
                    div.col.s6
                        div.card.blue-grey.darken-1
                            div.card-content.white-text
                                span.card-title
                                    a.white-text(href=synbiohub.instanceUrl) #{synbiohub.name}   
                                p.white-text
                                    strong Instance URL:
                                    span &nbsp; #{synbiohub.instanceUrl}
                                p.white-text
                                    strong URI Prefix:
                                    span &nbsp; #{synbiohub.uriPrefix}
                                p.white-text
                                    strong Administrator Email:
                                    span &nbsp; #{synbiohub.administratorEmail}
                                p.white-text
                                    strong Update endpoint:
                                    span &nbsp; #{synbiohub.instanceUrl + synbiohub.updateEndpoint}
                                p.white-text
                                    strong Description:
                                    span &nbsp; !{synbiohub.description}
                                p.white-text
                                    strong Accessible:
                                    if(synbiohub.updateWorking)
                                        span &nbsp; HTTP requests successful
                                    else
                                        span &nbsp; HTTP requests failing
                            div.card-action
                                a(href="/instances/" + synbiohub.id + "/approve/") Approve
                                a(href="/instances/" + synbiohub.id + "/reject/") Reject